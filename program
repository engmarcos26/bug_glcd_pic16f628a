//Glcd module connections
char GLCD_DataPort at PORTB; // PORTb PARA CONTROLE DOS DADOS DO GLCD

sbit GLCD_CS1 at RA0_bit;  // PINO CS1 DO GLCD NO PINO Ra0 DO PIC
sbit GLCD_CS2 at RA1_bit;  // PINO CS2 DO GLCD NO PINO Ra1 DO PIC
sbit GLCD_RS at RA2_bit;  // PINO RS DO GLCD NO PINO Ra2 DO PIC
sbit GLCD_RW at RA3_bit;  // PINO RW DO GLCD NO PINO Ra3 DO PIC
sbit GLCD_EN at RA4_bit;  // PINO EN DO GLCD NO PINO Ra4 DO PIC
sbit GLCD_RST at RA7_bit;  // PINO RST DO GLCD NO PINO Ra7 DO PIC

sbit GLCD_CS1_Direction at TRISA0_bit;
sbit GLCD_CS2_Direction at TRISA1_bit;
sbit GLCD_RS_Direction  at TRISA2_bit;
sbit GLCD_RW_Direction  at TRISA3_bit;
sbit GLCD_EN_Direction  at TRISA4_bit;
sbit GLCD_RST_Direction at TRISA7_bit;
// End Glcd module connections

void main()
{

 CMCON = 0b00000111;
 PCON =  0b00001011;
 INTCON = 0b00000000;
 OPTION_REG = 0b11000000;

 TRISA = 0b00000000;
 TRISB = 0b00000000;
 porta =0;
 portb=0;

 Glcd_Init();
 while(1)
 {
  glcd_image(mikro_logo);
  delay_ms(500);

 } //end while
} //end main
